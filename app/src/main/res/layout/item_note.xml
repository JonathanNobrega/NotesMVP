<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_note_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:foreground="?selectableItemBackground"
    android:orientation="vertical"
    app:contentPaddingBottom="16dp"
    app:contentPaddingLeft="16dp"
    app:contentPaddingRight="16dp"
    app:contentPaddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_note_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:fontFamily="@string/roboto_black"
            android:maxLines="2"
            android:textSize="18sp"
            tools:text="Note title" />

        <TextView
            android:id="@+id/text_view_note_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@string/roboto_light"
            android:maxLines="8"
            android:textSize="24sp"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam nec sapien enim. Phasellus at nisi rhoncus, volutpat lacus nec, egestas diam." />

    </LinearLayout>

</android.support.v7.widget.CardView>
