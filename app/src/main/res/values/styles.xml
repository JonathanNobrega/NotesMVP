<resources>

    <style name="AppTheme" parent="BaseTheme" />

    <!-- Base application theme -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#CCCCCC</item>
    </style>

    <!-- Home styles -->
    <style name="HomeButtonTitle">
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:layout_marginLeft">52dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Toolbar related styles -->
    <style name="InnerToolbarSubtitle" parent="TextAppearance.AppCompat">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Dialog button style -->
    <style name="DialogBorderlessButton">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:minWidth">@dimen/dialog_borderless_button_minimum_width</item>
        <item name="android:minHeight">@dimen/dialog_borderless_button_height</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:textColor">@color/color_accent</item>
    </style>

</resources>
